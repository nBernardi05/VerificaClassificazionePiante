<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="666.0" prefWidth="866.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bernardi.nicola.verificabernardi.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Autonoleggio">
         <font>
            <Font size="51.0" />
         </font>
      </Label>
      <HBox minWidth="-Infinity" prefHeight="533.0">
         <children>
            <VBox prefHeight="533.0" prefWidth="678.0">
               <children>
                  <TextArea fx:id="display" editable="false" prefHeight="536.0" prefWidth="678.0" text="premi su un bottone per iniziare" />
               </children>
            </VBox>
            <VBox prefHeight="533.0" prefWidth="147.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#visualizzaInKm" prefHeight="52.0" prefWidth="149.0" text="Visualizza in km">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#visualizzaInGiorni" prefHeight="52.0" prefWidth="150.0" text="Visualizza in gg">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#importoDaFatturare" prefHeight="52.0" prefWidth="150.0" text="Importo da fatt.">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
